<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tuyenmonkey.mkloader.MKLoader
            android:id="@+id/proprogressview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:mk_color="@color/colorWhite"
            app:mk_type="FishSpinner" />


        <RelativeLayout
            android:id="@+id/relativelayout_titelbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent">

            <emerge.project.onmeal.ui.fonts.RobotoMedium
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/relativelayout_menu"
                android:layout_toRightOf="@+id/relativelayout_menu"
                android:text="Profile"
                android:textColor="@color/colorTextWhite"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativelayout_menu"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu" />
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/relativelayout_titelbar"
            android:layout_alignParentStart="true"
            android:background="@color/colorAccent"
            android:layout_alignParentLeft="true">


            <emerge.project.onmeal.ui.fonts.RobotoBold
                android:id="@+id/robotoLight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/imageView12"
                android:layout_toLeftOf="@+id/imageView12"
                android:layout_toEndOf="@+id/imageview_list_menu_image"
                android:layout_toRightOf="@+id/imageview_list_menu_image"
                android:textColor="#ffffff"
                android:textSize="27sp" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageview_list_menu_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_image_default"
                app:civ_border_color="#00000000" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/relativelayout1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="#c23f2b">


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/divider12"
                android:layout_toRightOf="@+id/divider12">

                <emerge.project.onmeal.ui.fonts.RobotoMedium
                    android:id="@+id/text_indicator_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativelayout_indicator_address"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="Addresses"
                    android:textColor="#7a2316  "
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/relativelayout_indicator_address"
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_home_viwepager_indicator"
                    android:visibility="invisible">

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/divider12"
                android:layout_toLeftOf="@+id/divider12">

                <emerge.project.onmeal.ui.fonts.RobotoMedium
                    android:id="@+id/text_indicator_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativelayout_indicator_contact"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="Contact Details"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

                <RelativeLayout
                    android:id="@+id/relativelayout_indicator_contact"
                    android:layout_width="70dp"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_home_viwepager_indicator">

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/divider12"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/RelativeLayout2"
            android:background="#f7f7f7">

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="#f7f7f7" />

        </RelativeLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_gravity="start"
        android:background="@color/colorWhite">

        <include layout="@layout/include_navigation_menu"/>


    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>