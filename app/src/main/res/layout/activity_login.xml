<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.ActivityLogin">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true">

    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_background"
        android:layout_alignParentLeft="true" />





    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/proprogressview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        app:mk_color="@color/colorWhite"
        app:mk_type="FishSpinner" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edittext_user_email"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/colorWhite"
        android:layout_alignParentLeft="true" />


    <emerge.project.onmeal.ui.fonts.RobotoLight
        android:id="@+id/robotoLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittext_user_email"
        android:layout_alignStart="@+id/divider"
        android:layout_marginBottom="-70dp"
        android:text="Email"
        android:textColor="@color/colorTextWhite"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/divider" />

    <emerge.project.onmeal.ui.fonts.RobotoLightEditText
        android:id="@+id/edittext_user_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/robotoMedium2"
        android:layout_alignStart="@+id/robotoMedium2"
        android:layout_below="@+id/robotoMedium2"
        android:layout_marginRight="40dp"
        android:layout_marginTop="70dp"
        android:background="@color/edittext_background"
        android:ems="10"
        android:hint="yourmail@domain.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorTextWhite"
        android:textColorHint="@color/colorTextAsh"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_login"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/divider2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/relativelayout_google_singin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/imageView_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_socal_btn_google" />
            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/divider2"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:id="@+id/relativelayout_facebook_singin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/imageView_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_socal_btn_fb" />

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>

    <emerge.project.onmeal.ui.fonts.RobotoMedium
        android:id="@+id/robotoMedium2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:text="@string/login_activity_title"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/divider"
        android:layout_alignRight="@+id/divider"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_next" />
    </RelativeLayout>


</RelativeLayout>