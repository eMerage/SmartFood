<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout_main"
    android:layout_width="match_parent"
    android:layout_height="50dp">


    <RelativeLayout
        android:id="@+id/RelativeLayout22"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">


        <emerge.project.onmeal.ui.fonts.RobotoRegular
            android:id="@+id/textview_total_price_cents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:lineSpacingExtra="-3sp"
            android:text=".00"
            android:textColor="#3e3e3e"
            android:textSize="9sp" />


        <emerge.project.onmeal.ui.fonts.RobotoRegular
            android:id="@+id/textview_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/textview_total_price_cents"
            android:layout_toLeftOf="@+id/textview_total_price_cents"
            android:lineSpacingExtra="-3sp"
            android:text="000"
            android:textColor="#3e3e3e"
            android:textSize="13sp" />

    </RelativeLayout>

    <emerge.project.onmeal.ui.fonts.RobotoMedium
        android:id="@+id/textview_menuname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/img_btn_removeitem"
        android:layout_toRightOf="@+id/img_btn_removeitem"
        android:lineSpacingExtra="1sp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:textColor="#de262626"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/img_btn_removeitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cart_remove"
        android:layout_alignParentLeft="true" />


    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_toStartOf="@+id/RelativeLayout22"
        android:background="@drawable/bg_cart_qty_rectangle"
        android:layout_toLeftOf="@+id/RelativeLayout22">

        <emerge.project.onmeal.ui.fonts.RobotoRegularEditText
            android:id="@+id/textview_qty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/edittext_background"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#767676"
            android:inputType="number"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>