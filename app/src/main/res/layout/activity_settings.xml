<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <emerge.project.onmeal.ui.fonts.RobotoRegular
            android:id="@+id/robotoRegular9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_btn_contact"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="22dp"
            android:layout_marginBottom="10dp"
            android:textColor="#1e1e1e"
            android:lineSpacingExtra="5sp"
            android:textSize="10sp"
            android:text=""
            android:layout_alignParentLeft="true" />

        <RelativeLayout
            android:id="@+id/relativelayout_titelbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent">

            <emerge.project.onmeal.ui.fonts.RobotoMedium
                android:id="@+id/textView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/relativelayout_menu"
                android:layout_toRightOf="@+id/relativelayout_menu"
                android:text="Settings"
                android:textColor="@color/colorTextWhite"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/relativelayout_menu"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/menu" />
            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_btn_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/btn_contact_support_settings" />

        <emerge.project.onmeal.ui.fonts.RobotoLight
            android:id="@+id/text_changepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout_titelbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="45dp"
            android:lineSpacingExtra="-6sp"
            android:paddingTop="5dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:text="Change Password"
            android:textColor="#dd432b"
            android:textSize="20sp" />


        <emerge.project.onmeal.ui.fonts.RobotoLight
            android:id="@+id/text_faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_changepassword"
            android:layout_alignStart="@+id/text_changepassword"
            android:layout_alignLeft="@+id/text_changepassword"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:text="FAQ"
            android:textColor="#dd432b"
            android:textSize="20sp" />


        <emerge.project.onmeal.ui.fonts.RobotoLight
            android:id="@+id/text_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_faq"
            android:layout_alignStart="@+id/text_faq"
            android:layout_alignLeft="@+id/text_faq"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:text="Terms &amp; Conditions"
            android:textColor="#dd432b"
            android:textSize="20sp" />


        <emerge.project.onmeal.ui.fonts.RobotoLight
            android:id="@+id/text_suggetions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_terms"
            android:layout_alignStart="@+id/text_terms"
            android:layout_alignLeft="@+id/text_terms"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:paddingRight="50dp"
            android:paddingBottom="5dp"
            android:text="Recommend a Restaurant"
            android:textColor="#dd432b"
            android:textSize="20sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_gravity="start"
        android:background="@color/colorWhite">

        <include layout="@layout/include_navigation_menu"/>


    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>