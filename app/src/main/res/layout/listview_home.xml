<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:id="@+id/relativeLayout5_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:elevation="5dp">


        <emerge.project.onmeal.ui.fonts.RobotoRegular
            android:id="@+id/textView_home_menu_cat"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@+id/textView_home_menu_name"
            android:layout_alignStart="@+id/textView_home_menu_name"
            android:layout_alignLeft="@+id/textView_home_menu_name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="6sp"
            android:textColor="#de797979"
            android:textSize="10sp" />

        <emerge.project.onmeal.ui.fonts.RobotoMedium
            android:id="@+id/textView_home_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@+id/imageView_home_menu_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="3sp"
            android:textColor="#de262626"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView_home_menu_list"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_default" />

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_heart_menu" />
    </RelativeLayout>

</android.support.v7.widget.CardView>


