<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_dialog_terms_conditions"
        android:padding="10dp"
        android:layout_alignParentLeft="true">


        <emerge.project.onmeal.ui.fonts.RobotoRegular
            android:id="@+id/textView_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:freezesText="true"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/colorTextAsh" />


        <emerge.project.onmeal.ui.fonts.RobotoLight
            android:id="@+id/textView_message_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_message_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/open_sans_light"
            android:freezesText="true"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorTextAsh" />


        <emerge.project.onmeal.ui.fonts.RobotoLightButton
            android:id="@+id/button_ok"
            android:layout_width="120dip"
            android:layout_height="40dip"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView_message_message"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dip"
            android:background="@drawable/selector_button_green"
            android:fontFamily="@font/open_sans_light"
            android:text="@string/dialog_one_button_ok"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</RelativeLayout>